<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/delete"
        motion:constraintSetStart="@id/img1_scene"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/storyOne"
               motion:framePosition="50"
               android:scaleX="0.75"
               android:scaleY="0.75"
               android:translationX="25dp" />
           <KeyAttribute
               motion:motionTarget="@+id/storyTwo"
               motion:framePosition="50"
               android:scaleX="0.75"
               android:scaleY="0.75"
               android:translationX="-25dp" />
       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/storyOne"
            motion:dragDirection="dragRight"
            motion:touchAnchorSide="right" />
    </Transition>

    <ConstraintSet android:id="@+id/img1_scene">
        <Constraint
            android:id="@+id/storyOne"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" >
            <CustomAttribute
                motion:attributeName="radius"
                motion:customDimension="24dp" />
        </Constraint>
        <Constraint
            android:id="@+id/storyTwo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:rotationY="90">
            <CustomAttribute
                motion:attributeName="radius"
                motion:customDimension="24dp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/delete">
        <Constraint
            android:id="@+id/storyOne"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:rotationY="-90">
            <CustomAttribute
                motion:attributeName="radius"
                motion:customDimension="24dp" />
        </Constraint>
        <Constraint
            android:id="@+id/storyTwo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" >
            <CustomAttribute
                motion:attributeName="radius"
                motion:customDimension="24dp" />
        </Constraint>
    </ConstraintSet>
</MotionScene>