<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/image2"
        motion:constraintSetStart="@id/image3"
        motion:duration="1000"
        motion:staggered="0.65">
        <KeyFrameSet></KeyFrameSet>
        <OnClick motion:targetId="@+id/loginSignupBtn" />
    </Transition>

    <ConstraintSet android:id="@+id/image3">
        <Constraint
            android:id="@+id/loginContainerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:alpha="0"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toTopOf="@id/loginContainerUsernameEdt"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/loginContainerUsernameEdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp"
            android:alpha="0"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toTopOf="@id/loginContainerPasswordEdt"
            motion:layout_constraintEnd_toEndOf="@id/loginContainerTitle"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/loginContainerPasswordEdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp"
            android:alpha="0"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toTopOf="@id/loginContainerEmailEdt"
            motion:layout_constraintEnd_toEndOf="@id/loginContainerTitle"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/loginContainerEmailEdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="80dp"
            android:alpha="0"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toTopOf="@id/loginContainerLoginBtn"
            motion:layout_constraintEnd_toEndOf="@id/loginContainerTitle"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/loginContainerLoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="110dp"
            android:alpha="0"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/image2">
        <Constraint
            android:id="@+id/loginSignupBtn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="100dp"
            android:alpha="0"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
    <Transition
        motion:constraintSetEnd="@+id/image3"
        motion:constraintSetStart="@+id/image2"
        motion:duration="1000"
        motion:staggered="0.65" />
</MotionScene>