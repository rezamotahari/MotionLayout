<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/state2"
        motion:constraintSetStart="@id/state1"
        motion:duration="700">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="95"
                motion:motionTarget="@+id/menuArrow" />
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/state3"
        motion:constraintSetStart="@+id/state1"
        motion:duration="700">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="95"
                motion:motionTarget="@+id/menuArrow" />
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/state4"
        motion:constraintSetStart="@+id/state1"
        motion:duration="700">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="95"
                motion:motionTarget="@+id/menuArrow" />
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/state1"
        motion:constraintSetStart="@+id/state4"
        motion:duration="700">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="5"
                motion:motionTarget="@+id/menuArrow" />
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/state1"
        motion:constraintSetStart="@+id/state3"
        motion:duration="700">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="5"
                motion:motionTarget="@+id/menuArrow" />
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/state1"
        motion:constraintSetStart="@+id/state2"
        motion:duration="700">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="5"
                motion:motionTarget="@+id/menuArrow" />
        </KeyFrameSet>
    </Transition>


    <ConstraintSet android:id="@+id/state1">
        <Constraint
            android:id="@+id/menu1Txt"
            android:layout_width="0dp"
            android:layout_height="140dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="15dp" />
        </Constraint>
        <Constraint
            android:id="@+id/menu2Txt"
            android:layout_width="0dp"
            android:layout_height="140dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/menu1Txt">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="14dp" />
        </Constraint>
        <Constraint
            android:id="@+id/menu3Txt"
            android:layout_width="0dp"
            android:layout_height="140dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/menu2Txt">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="13dp" />
        </Constraint>
        <Constraint
            android:id="@+id/menuArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="8dp"
            android:alpha="0"
            android:elevation="24dp"
            android:rotation="-90"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/state2">
        <Constraint
            android:id="@+id/menu1Txt"
            android:layout_width="0dp"
            android:layout_height="80dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="15dp" />
        </Constraint>
        <Constraint
            android:id="@+id/menu2Txt"
            android:layout_width="0dp"
            android:layout_height="80dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/menu1Txt">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="0dp" />
        </Constraint>
        <Constraint
            android:id="@+id/menu3Txt"
            android:layout_width="0dp"
            android:layout_height="80dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/menu1Txt">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="0dp" />
        </Constraint>
        <Constraint
            android:id="@+id/menuArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="8dp"
            android:alpha="1"
            android:elevation="24dp"
            android:rotation="-90"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/state3"
        motion:deriveConstraintsFrom="@+id/state2">
        <Constraint
            android:id="@+id/menu1Txt"
            android:layout_width="0dp"
            android:layout_height="80dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="0dp" />
        </Constraint>
        <Constraint
            android:id="@+id/menu2Txt"
            android:layout_width="0dp"
            android:layout_height="80dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="15dp" />
        </Constraint>
        <Constraint
            android:id="@+id/menu3Txt"
            android:layout_width="0dp"
            android:layout_height="80dp"
            motion:cardElevation="0dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/menu1Txt">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="0dp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/state4"
        motion:deriveConstraintsFrom="@+id/state3">
        <Constraint
            android:id="@+id/menu1Txt"
            android:layout_width="0dp"
            android:layout_height="80dp"
            motion:cardElevation="0dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="0dp" />
        </Constraint>
        <Constraint
            android:id="@+id/menu2Txt"
            android:layout_width="0dp"
            android:layout_height="80dp"
            motion:cardElevation="15dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="0dp" />
        </Constraint>
        <Constraint
            android:id="@+id/menu3Txt"
            android:layout_width="0dp"
            android:layout_height="80dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="15dp" />
        </Constraint>
    </ConstraintSet>

</MotionScene>