<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingEnd="10dp">

    <TextView
        android:id="@+id/itemMoviesRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ebonyClay"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/itemMoviesImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        app:civ_border_color="@color/ebonyClay"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemMoviesRow"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemMoviesName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/ebonyClay"
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="sans-serif-light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemMoviesImg"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="The movies name" />

</androidx.constraintlayout.widget.ConstraintLayout>