<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/item_movie_3d_scene">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/itemMovieImgLay"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginHorizontal="48dp"
        android:background="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/itemMovie3DImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/aquaman_poster"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/itemMovieInfoLay"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@id/itemMovieImgLay"
        app:layout_constraintEnd_toEndOf="@id/itemMovieImgLay"
        app:layout_constraintStart_toStartOf="@id/itemMovieImgLay"
        app:layout_constraintTop_toTopOf="@id/itemMovieImgLay">

        <TextView
            android:id="@+id/itemMovie3DTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="@color/ebonyClay"
            android:textSize="18sp" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.motion.widget.MotionLayout>